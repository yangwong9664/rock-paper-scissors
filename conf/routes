

GET     /play                           controllers.GameController.game()
POST    /play-submit                    controllers.GameController.submitGame()

GET     /menu                           controllers.MenuController.menu()
POST    /menu-submit                    controllers.MenuController.submitMenu()

GET     /restart                        controllers.MenuController.restart()

GET     /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)
